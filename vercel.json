{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "storybook-static",
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "STORYBOOK_DISABLE_TELEMETRY": "true"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
